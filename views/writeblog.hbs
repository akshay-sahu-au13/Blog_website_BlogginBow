<div class="container-fluid">
    <form action="/auth/profile/writeblog" method="POST" enctype="multipart/form-data" class="blog-form">

        <div class="form-group">
            <label for="title"></label>
            <input type="text" name="title" class="form-control" id="title" placeholder="Title goes here...">
        </div>

        <div class="form-group">
            <textarea name="description" id="description" cols="60" rows="10">
                Description
            </textarea>
        </div>

        <div class="form-group">
            <textarea name="body" id="body" cols="60" rows="10">
                Content:
            </textarea>
        </div>

        <button type="submit" class="btn btn-success">Post Blog</button>

    </form>
</div>